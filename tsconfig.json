{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["es2019"],
    "declaration": true,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "outDir": "./lib",
    "typeRoots": [
      "lib"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "lib/*"
      ]
    },
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true
  },
  "include": [
    "./src/**/*"
  ]
}
